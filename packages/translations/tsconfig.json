{
  "compilerOptions": {
    "composite": true,
    "rootDir": "./lib",
    "outDir": "./lib",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2021",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2021",
      "dom"
    ]
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../translations-json" },
    { "path": "../translations-yaml" }
  ]
}
