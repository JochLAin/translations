{
  "compilerOptions": {
    "rootDir": "./lib",
    "outDir": "./lib",
    "sourceMap": true,
    "module": "ES2020",
    "target": "ES5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es5"]
  },
  "include": ["./lib/*.ts"],
  "exclude": ["node_modules"]
}
